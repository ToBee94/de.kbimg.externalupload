<?xml version="1.0" encoding="UTF-8"?>
<package name="de.kbimg.externalupload"  xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/package.xsd">
	<packageinformation>
		<packagename>KBimg - External Upload</packagename>
		<packagedescription>This plugin adds an upload field for the pichoster kbimg.de to your WYSIWYG editor.</packagedescription>
		<isunique>1</isunique>
		<version>1.0.1 pl 2</version>
		<date>2013-08-07</date>
		<plugin>com.woltlab.wcf.form.message</plugin>
	</packageinformation>

	<authorinformation>
		<author>Tobias Vorwachs</author>
		<authorurl>http://kbimg.de</authorurl>
	</authorinformation>

	<requiredpackages>
		<requiredpackage minversion="1.1.*">com.woltlab.wcf</requiredpackage>
		<requiredpackage minversion="1.1.*">com.woltlab.wcf.form.message</requiredpackage>
		<requiredpackage minversion="1.1.*">com.woltlab.wcf.form.message.wysiwyg</requiredpackage>
	</requiredpackages>

	<instructions type="install">
		<!-- files -->
		<files>files.tar</files>
		<templates>templates.tar</templates>
		<!-- config -->
   		<eventlistener>eventlistener.xml</eventlistener>
		<groupoptions>groupoptions.xml</groupoptions>
		<options>options.xml</options>
   		<!-- language -->
		<languages languagecode="de">lang/de.xml</languages>
		<languages languagecode="de-informal">lang/de-informal.xml</languages>
		<languages languagecode="en">lang/en.xml</languages>
	</instructions>
	
	<instructions type="update" fromversion="*">
		<!-- files -->
		<files>files.tar</files>
		<templates>templates.tar</templates>
		<!-- config -->
   		<eventlistener>eventlistener.xml</eventlistener>
		<groupoptions>groupoptions.xml</groupoptions>
		<options>options.xml</options>
   		<!-- language -->
		<languages languagecode="de">lang/de.xml</languages>
		<languages languagecode="de-informal">lang/de-informal.xml</languages>
		<languages languagecode="en">lang/en.xml</languages>
	</instructions>
</package>